<h1>My tasks</h1>
<ul><% @tasks.each do |task| %>
  <%#=link_to task.details, tasks_path(tasks)  %>
  <li>
 <% if task.completed %>
    ✅<%= link_to task.title, task_path(task) %>
  <% else %>
    <%= link_to task.title, task_path(task) %>
  <% end  %>
  <%= link_to "❌", task_path(task), method: :delete, data: { confirm: "Delete #{task.title}" } %>
 </li>
 <% end  %>
</ul>

